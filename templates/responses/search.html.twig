{% extends '@crm-core/layout_backend.html.twig' %}
{% import '@bolt/_macro/_macro.html.twig' as macro %}
{% import "@crm-core/macros/form_type.html.twig" as fields %}
{% import '@crm-core/macros/paginate.html.twig' as navigate %}
{% import '@crm-core/macros/form_classic.html.twig' as forms %}

{% block shoulder %}
    {{ 'Recherche dans les réponses envoyées aux internautes' }}
{% endblock shoulder %}

{% block title %}
    {{ macro.icon('search') }}
    Recherche dans les réponses en base
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('crm-assets/css/tom-select.default.css') }}"/>
    <style>
        .bg-light-gray {
            background-color: lightgray !important;
            border: 1px solid dimgray !important;
            padding-bottom: 1em;
        }
    </style>
{% endblock %}

{% block main %}
    {{ parent() }}

    <div id="search" class="col-12 row bg-light-gray m-0 p-0 pb-2">
        {{ form_start(form, { 'attr': {'class': 'col-12 row'}}) }}
        {{ form_row(form._token) }}
        {% set errors = form.vars.errors.form.getErrors(true) %}
        {% if errors|length %}
            <ul class="errors-form col-12 row">
                {% for error in errors %}
                    <li class="error-line col-12">{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
        <div class="col-12 row m-0 p-0">
            <div class="col-8 row m-0 mt-2 p-0">
                {% set searchText = reset ? "" : form.searchText.vars.value %}
                {{ fields.field(form.searchText, "Terme(s) recherché(s)", {
                    'class': 'col-12 mb-2 searchText', 'placeholder': 'Terme(s) recherché(s)',
                    'il_class': {'label': 'col-4 px-2', 'input': 'col-8'}, 'value': searchText,
                }) }}
                {% set categories = reset ? {} : form.categories.vars.value %}
                {{ fields.select(form.categories, "Catégories", {
                    'class': 'col-12 p-2 m-0 categories', 'placeholder': 'Choisissez ou saisissez une catégorie',
                    'multiple': true, 'sl_class' : {'label': "col-4", 'select': 'col-8'}, 'choices': dbCategories,
                    'default': categories,
                }) }}
            </div>
            <div class="col-4 row m-0 mt-2 p-0">
                <div class="col-6 row m-0 p-2">
                    {{ fields.submitbtn(form.submit, '', {
                        'class': 'col-12 btn btn-success text-white',
                    }) }}
                </div>
                <div class="col-6 row m-0 p-2">
                    {{ fields.submitbtn(form.reset, '', {
                        'class': 'col-12 btn-warning text-black',
                    }) }}
                </div>
            </div>
        </div>
        {{ form_end(form, {render_rest: false}) }}
    </div>
    <div id="responses" class="col-12 row mt-4 mx-0 px-0">
        <table class="col-12 row mx-0 px-0">
            <thead class="col-12 row mx-0 px-0">
            <tr class="row col-12 mx-0 px-0">
                <th class="col-4 px-1">Question</th>
                <th class="col-4 px-1">Réponse</th>
                <th class="col-1 px-1">Le</th>
                <th class="col-1 px-1">Fin le</th>
                <th class="col-2 px-1">Actions</th>
            </tr>
            </thead>
            <tbody class="col-12 row">
            {% if reponses is not defined or reponses is empty %}
                <tr class="col-12 row">
                    <td colspan="4" class="text-center">Pas de réponse en base</td>
                </tr>
            {% else %}
                {% for reponse in reponses %}
                    <tr class="row col-12">
                        <td class="col-4 px-1">
                            {% if reponse.sujet|length < 46 %}
                                {{ reponse.sujet }}
                            {% else %}
                                {{ reponse.sujet|slice(0, 42)~" ..." }}
                            {% endif %}
                        </td>
                        <td class="col-4 px-1">
                            {% if reponse.reponse|length < 46 %}
                                {{ reponse.reponse }}
                            {% else %}
                                {{ reponse.reponse|slice(0, 42)~" ..." }}
                            {% endif %}
                        </td>
                        <td class="col-1 px-1">
                            {{ reponse.created_at|date('d/m/Y') }}
                        </td>
                        <td class="col-1 px-1">
                            {{ reponse.closed_at|date('d/m/Y') }}
                        </td>
                        <td class="col-2 px-1"></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
        {{ navigate.page_navigate({
            'currentPage': currentPage,
            'pages': pages,
            'prefix': 'r',
            'route': 'search_responses',
            'class': 'col-12 row',
        }) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('crm-assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('crm-assets/js/tom-select.complete.js') }}"></script>
    <script>
        const $tomSelectObj = {};

        function initTomSelect(objSelect, options = {}) {
            $tomSelectObj[objSelect.id] = new TomSelect(objSelect, options);
        }

        const categories = document.querySelector(".categories select");
        if (categories) {
            initTomSelect(categories, {
                persist: false,
                createOnBlur: false,
                create: false
            });
        }
    </script>
    {% include "@crm-core/includes/_paginate.js" %}
    {% include "@crm-core/includes/_goPage.js" %}
{% endblock %}
